<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" package="com.lingdong.spring4.entity">

    <class name="com.lingdong.spring4.entity.Book" table="book">
        <id name="bookId" type="int" column="bookid">
            <generator class="increment"/>
        </id>
        <property name="bookName" column="bookname"/>
        <property name="price" column="price"/>

    </class>


</hibernate-mapping>