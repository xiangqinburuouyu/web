<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" package="com.lingdong.spring.hibernate.entities">

    <class name="com.lingdong.spring.hibernate.entities.UserRole" table="user_role">
        <id name="userRoleId" type="java.lang.Integer" column="user_role_id">
            <generator class="native"/>
        </id>
        <property name="userId" type="java.lang.Integer" column="user_id"/>
        <property name="roleId" type="java.lang.Integer" column="role_id"/>

    </class>


</hibernate-mapping>