<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" package="com.lingdong.spring.hibernate.entities">

    <class name="com.lingdong.spring.hibernate.entities.UserGroup" table="user_group">
        <id name="userGroupId" type="java.lang.Integer" column="user_group_id">
            <generator class="native"/>
        </id>
        <property name="userId" type="java.lang.Integer" column="user_id"/>
        <property name="groupId" type="java.lang.Integer" column="group_id"/>

    </class>


</hibernate-mapping>