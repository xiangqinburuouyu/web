<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" package="com.lingdong.spring.hibernate.entities">

    <class name="com.lingdong.spring.hibernate.entities.Authorities" table="authorities">
        <id name="authorityId" type="java.lang.Integer" column="authority_id">
            <generator class="native"/>
        </id>
        <property name="authorityName" type="java.lang.String" length="30" column="authority_name"/>
        <property name="authorityDescription" type="java.lang.String" length="100" column="authority_description"/>
        <property name="enabled" type="java.lang.Boolean" column="enabled"/>
    </class>


</hibernate-mapping>